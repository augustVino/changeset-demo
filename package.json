{
  "name": "@monorepo/root",
  "version": "0.0.0",
  "private": true,
  "description": "pnpm + changeset 管理的 monorepo 项目",
  "scripts": {
    "build": "pnpm -r --filter='./packages/*' run build",
    "test": "pnpm -r --filter='./packages/*' run test",
    "changeset": "changeset",
    "version": "changeset version",
    "publish": "pnpm build && changeset publish --access=public",
    "changeset:beta": "changeset pre enter beta",
    "changeset:exit": "changeset pre exit"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
